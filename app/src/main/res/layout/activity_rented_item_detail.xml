<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- The ActionBar -->
        <include
            layout="@layout/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- The main content view -->
        <RelativeLayout
            android:id="@+id/flContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="25dp">

                <ImageView
                    android:id="@+id/imgThumbnail"
                    android:layout_width="100dp"
                    android:layout_height="130dp" />

                <TextView
                    android:id="@+id/txtTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="23dp"
                    android:layout_marginRight="20dp"
                    android:layout_toRightOf="@id/imgThumbnail"
                    android:textColor="@color/Black"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:text="footmop"/>

                <TextView
                    android:id="@+id/txtRentedBy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtTitle"
                    android:layout_marginLeft="23dp"
                    android:layout_marginRight="16dp"
                    android:layout_toRightOf="@id/imgThumbnail"
                    android:textColor="@color/Gray"
                    android:textSize="20dp"
                    android:textStyle="normal"
                    android:text="bel"/>


                <TextView
                    android:id="@+id/txtPriceLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtRentedBy"
                    android:layout_marginLeft="23dp"
                    android:layout_marginRight="16dp"
                    android:layout_toRightOf="@id/imgThumbnail"
                    android:textColor="@color/Gray"
                    android:textSize="20dp"
                    android:textStyle="normal"
                    android:text="PHP 20"/>

                <TextView
                    android:id="@+id/txtRentDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imgThumbnail"
                    android:textColor="@color/Gray"
                    android:textSize="16dp"
                    android:textStyle="normal"
                    android:text="JAn.20"/>

                <TextView
                    android:id="@+id/txtRentExpiry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtRentDate"
                    android:textColor="@color/Gray"
                    android:textSize="16dp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/lblDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtRentExpiry"
                    android:layout_marginRight="18dp"
                    android:layout_marginTop="10dp"
                    android:text="Details:"
                    android:textColor="@color/Black"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lblDetails"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/Gray"
                    android:textSize="16dp"
                    android:textStyle="normal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/txtDetails"
                    android:gravity="center|bottom"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btnReturned"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/positivebutton"
                        android:onClick="onReturned"
                        android:src="@drawable/button_sell"
                        android:text="Returned"
                        android:textColor="@color/White" />

                    <!--<Button
                        android:id="@+id/btnNotify"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/negativebutton"
                        android:onClick="onNotifyRenter"
                        android:src="@drawable/button_sell"
                        android:text="Notify Renter"
                        android:textColor="@color/Louie" />-->

                </LinearLayout>

            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/LightYellow"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/drawer_view" />

</android.support.v4.widget.DrawerLayout>
